[alias]
	c  = commit
	b  = branch -a
	f  = fetch
	m  = merge
    p  = push
    pl = pull --rebase
    st = status
    co = checkout
    tree = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n\" --abbrev-commit --date=relative --branches --all
    ss = stash save
    sl = stash list
    sp = stash pop
    sa = stash apply
    d  = diff
    dc = diff --cached

